
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div class="container">
    <div class="form-horizontal">
        <form class="form-horizontal" role="form" action="@Url.Action("RegisterDeal")" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="UserName" name="username" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="UserPassWord" name="passwd" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Register" />
            </div>
        </form>
    </div>
</div>
